
# Core
APP_NAME=pipeline-orchestrator
LOG_LEVEL=INFO
SQLITE_PATH=./data/db.sqlite3

# Retries
MAX_ATTEMPTS_DEFAULT=1
BACKOFF_BASE_SECONDS=0

# Notifications
NOTIFY_WEBHOOK_URL=
# JSON list, e.g. ["SUCCEEDED","FAILED"]
NOTIFY_EVENTS=["SUCCEEDED","FAILED"]

# Auth & rate limit
API_KEY=
RATE_LIMIT_PER_MINUTE=120
RATE_LIMIT_WINDOW_SECONDS=2
RATE_LIMIT_PATHS=["/health"]

# Artifacts
ARTIFACTS_DIR=./data/artifacts
SECRET_KEY=please-change-me
SIGNED_URL_TTL_SECONDS=300
SIGNED_URLS_REQUIRED=false

# CORS for UI
CORS_ALLOW_ORIGINS=["http://localhost:5173","http://localhost:8080"]

# Streams
STREAM_BACKEND=kafka           # none|kafka|qstash|eventhubs|kinesis
KAFKA_BOOTSTRAP=redpanda:9092
KAFKA_TOPIC_DEFAULT=pipeline_events
